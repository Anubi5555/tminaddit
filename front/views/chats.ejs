<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Chats</title>
		<link rel="stylesheet" href="css/bootstrap.min.css">
        <link rel="stylesheet" href="css/style.css">
		<script type="text/javascript" src="js/jquery-3.5.1.min.js"></script>
		<script type="text/javascript" src="js/bootstrap.min.js"></script>
        <script type="text/javascript" src="js/axios.min.js"></script>
	</head>
    <body>
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-1">
                </div>
                    <div id="chat-list" class="col-md-10 border-right space">
                        <div class="settings-tray">
                            <div class="text-center">
                                <h6>Chats</h6>
                            </div>
                            <span class="settings-tray--right"></span>
                        </div>
                        <!-- <div class="search-box">
                            <div class="input-wrapper">
                                <input placeholder="Search here" type="text">
                            </div>
                        </div> -->
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6 message">
                    <div class="card gedf-card " >
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true">Start a chat</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                                    <div class="form-group">
                                        <label class="sr-only" for="message">post</label>
                                        <input type="text" id="username" placeholder="Username" class="form-control title-input"></input>
                                    </div>
                                </div>
                            </div>
                            <div class="btn-toolbar justify-content-between">
                                <div class="btn-group">
                                    <button id="start-chat-button" type="submit" class="btn btn-primary">Start</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script type="text/javascript" src="js/chats.js"></script>
     </body>
<html>